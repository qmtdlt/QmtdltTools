<Window x:Class="QmtdltTools.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QmtdltTools.WPF"
        mc:Ignorable="d"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <wpf:ChromiumWebBrowser x:Name="Browser" Address="https://www.youtube.com/" />

        <TextBox TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
                 Text="{Binding CurSubtitle}" Grid.Row="1" MouseDoubleClick="TextBox_MouseDoubleClick"></TextBox>        
    </Grid>
</Window>
