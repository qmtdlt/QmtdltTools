<Window x:Class="QmtdltTools.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QmtdltTools.WPF"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="YoungForYou" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <hc:ComboBox DisplayMemberPath="text" SelectedValuePath="id" MinWidth="100"
                         SelectedValue="{Binding SelectedVideoType,Mode=TwoWay}" 
                         ItemsSource="{Binding VideoTypeSelection}"/>
        </StackPanel>

        <Grid Visibility="{Binding UrlInputIsShow}" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox Text="{Binding InputUrl}" Visibility="{Binding UrlInputIsShow}" Width="500"/>
                <Button Command="{Binding AddNew}" MinWidth="100" Visibility="{Binding UrlInputIsShow}">添加</Button>
            </StackPanel>
            
            <WrapPanel Grid.Row="1">
                <ItemsControl ItemsSource="{Binding OnLineViews}"></ItemsControl>
            </WrapPanel>
        </Grid>
        <Grid Visibility="{Binding OffLineIsShow}" Grid.Row="1">
            <Button Command="{Binding OpenLocalPalyGround}">离线播放</Button>
        </Grid>
    </Grid>
</Window>
