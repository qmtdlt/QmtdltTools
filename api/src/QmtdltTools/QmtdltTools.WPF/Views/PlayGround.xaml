<Window x:Class="QmtdltTools.WPF.Views.PlayGround"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QmtdltTools.WPF.Views"
        mc:Ignorable="d"
        Title="PlayGround" Height="450" Width="800" WindowState="Maximized" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <UserControl Content="{Binding VideoView}"/>
        <GridSplitter Grid.Row="1" Height="5" Background="#000000" HorizontalAlignment="Stretch"/>
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
            FontSize="28" FontWeight="Light" BorderThickness="0"
            Text="{Binding PastSubtitle}"  MouseDoubleClick="TextBox_MouseDoubleClick" ></TextBox>
            <TextBox TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Top"
            FontSize="28" FontWeight="Bold" BorderThickness="0"
            Text="{Binding CurSubtitle}" Grid.Row="1" MouseDoubleClick="TextBox_MouseDoubleClick"></TextBox>
        </Grid>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Background="#000000" Grid.RowSpan="3" Width="5"></GridSplitter>
        <Grid Grid.RowSpan="3" Grid.Column="2">
            <Grid Background="Yellow">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Command="{Binding AudioRecordCmd}" Content="{Binding RecordBtnContent}" />
                <Button Command="{Binding CheckShadowingCmd}" IsEnabled="{Binding IsSubmitEnable}" Grid.Column="1">提交录音</Button>
                <MediaElement Source="{Binding RecordAudioUri}" Visibility="{Binding AudioPlayerVisibility}"  Margin="0,10,0,0" LoadedBehavior="Manual" Grid.Row="1"/>
                <TextBlock Text="{Binding StatusText}" Grid.Row="2"></TextBlock>
                <StackPanel Grid.Row="3" Background="Blue" Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>发音分数</TextBlock>
                        <TextBlock Text="{Binding PronunciationResult.PronunciationScore}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>发音准确度</TextBlock>
                        <TextBlock Text="{Binding PronunciationResult.AccuracyScore}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>语音的流畅度</TextBlock>
                        <TextBlock Text="{Binding PronunciationResult.FluencyScore}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>完整性</TextBlock>
                        <TextBlock Text="{Binding PronunciationResult.CompletenessScore}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>韵律</TextBlock>
                        <TextBlock Text="{Binding PronunciationResult.ProsodyScore}"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>