<Window x:Class="QmtdltTools.WPF.Views.PlayGround"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QmtdltTools.WPF.Views"
        mc:Ignorable="d"
        Title="PlayGround" Height="450" Width="800" WindowState="Maximized" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <UserControl Content="{Binding VideoView}"/>
        <GridSplitter Grid.Row="1" Height="5" Background="#000000" HorizontalAlignment="Stretch"/>
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
            FontSize="28" FontWeight="Light" BorderThickness="0"
            Text="{Binding PastSubtitle}"  MouseDoubleClick="TextBox_MouseDoubleClick" ></TextBox>
            <TextBox TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Top"
            FontSize="28" FontWeight="Bold" BorderThickness="0"
            Text="{Binding CurSubtitle}" Grid.Row="1" MouseDoubleClick="TextBox_MouseDoubleClick"></TextBox>
        </Grid>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Background="#000000" Grid.RowSpan="3" Width="5"></GridSplitter>

        <Grid Grid.RowSpan="3" Grid.Column="2" Background="Red">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button>开始录音</Button>
                <Button Grid.Column="1">提交录音</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>