<Window x:Class="QmtdltTools.WPF.Views.TranslateResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QmtdltTools.WPF.Views"
        mc:Ignorable="d"
        Title="TranslateResultWindow" Height="250" Width="580" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid Margin="10,10,10,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding ResData.WordText}" VerticalAlignment="Center" FontSize="32"/>
            <TextBlock Text="{Binding ResData.AITranslation}" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="28"/>
            <Button Click="playWord" VerticalAlignment="Center" Margin="10,0,0,0">play</Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding ResData.AIExplanation}" TextWrapping="Wrap" FontSize="18" VerticalContentAlignment="Top" Padding="5" MouseDoubleClick="TextBox_MouseDoubleClick"/>
            <Grid Grid.Column="1">
                <Button Click="playExplain" VerticalAlignment="Top">play</Button>
            </Grid>
        </Grid>

        <MediaElement x:Name="mediaElement"
               LoadedBehavior="Manual"
               UnloadedBehavior="Manual"
               Visibility="Collapsed"/>
    </Grid>
</Window>
