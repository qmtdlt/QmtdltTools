<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:QmtdltTools.Avaloina.Views"
    mc:Ignorable="d"
    x:Class="QmtdltTools.Avaloina.Views.ChooseSubtitle"
    x:DataType="vm:ChooseSubtitleVm"
    Title="选择字幕"
    d:DesignWidth="800" d:DesignHeight="450">

  <Design.DataContext>
    <vm:ChooseSubtitleVm />
  </Design.DataContext>

  <DataGrid Margin="20" ItemsSource="{Binding Subtitles}" x:Name="myDataGrid"
          CanUserReorderColumns="True"
          CanUserResizeColumns="True"
          CanUserSortColumns="False"
          GridLinesVisibility="All"
          BorderThickness="1" BorderBrush="Gray">
    <DataGrid.Columns>
      <DataGridTextColumn Header="SubtitleId" Binding="{Binding SubtitleId}" Width="100" />
      <DataGridTextColumn Header="语言" Binding="{Binding Language}" Width="100" />
      <DataGridTextColumn Header="下载数量" Binding="{Binding DownloadCount}" Width="100" />
      <DataGridTextColumn Header="Fps" Binding="{Binding DownloadCount}" Width="100" />
      <DataGridTextColumn Header="上传日期" Binding="{Binding UploadDate}" Width="250" />
      <DataGridTextColumn Header="Release" Binding="{Binding Release}" Width="500" />
      <DataGridTextColumn Header="上传者" Binding="{Binding Uploader.Name}" Width="200" />
      <DataGridTextColumn Header="评分" Binding="{Binding Votes}" Width="100" />
      <DataGridTemplateColumn Header="操作">
        <DataGridTemplateColumn.CellTemplate>
          <DataTemplate DataType="vm:ChooseSubtitleVm">
            
            <Button Command="{Binding #myDataGrid.((vm:ChooseSubtitleVm)DataContext).DownloadSubtitleCommand}"  CommandParameter="{Binding .}"
                    Margin="10,5,10,5" Width="80"
                    Content="下载"/>
           
          </DataTemplate>
        </DataGridTemplateColumn.CellTemplate>
      </DataGridTemplateColumn>
    </DataGrid.Columns>
  </DataGrid>
</Window>
