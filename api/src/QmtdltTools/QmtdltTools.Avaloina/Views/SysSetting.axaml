<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="QmtdltTools.Avaloina.Views.SysSetting"
        xmlns:vm="using:QmtdltTools.Avaloina.Views"
        x:DataType="vm:SysSettingVm"
        Title="SysSetting">

  <Design.DataContext>
    <vm:SysSettingVm />
  </Design.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="60"/>
      <RowDefinition Height="60"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="150"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="100"/>
    </Grid.ColumnDefinitions>

    <!-- API Key 输入框 -->
    <TextBlock Text="OpenSubtitle ApiKey" VerticalAlignment="Center"></TextBlock>
    <TextBox Text="{Binding OpenSubTitleApiKey}" Grid.Column="1" VerticalAlignment="Center"></TextBox>
    <Button Command="{Binding SaveApiKeyCommand}" Grid.Column="2" VerticalAlignment="Center">保存密钥</Button>


    <Button Command="{Binding ChooseLocalSrtCmd}" Grid.Row="1" VerticalAlignment="Center">选择本地字幕文件</Button>
    <TextBlock Text="{Binding LocalSubtitlePath}" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"></TextBlock>
  </Grid>
</Window>
